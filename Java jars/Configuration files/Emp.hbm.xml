<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.Employee" table="Employee">
		<!-- lets the appliction assign an identifier  -->
		
		<id name="empId" column="emp_id" type="integer"/>
		<property name="empName" column="emp_name" type="string" length="20"/>
		<property name="salary" column="emp_salary" type="double" />
		
	</class> 
</hibernate-mapping>